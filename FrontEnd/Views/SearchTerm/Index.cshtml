@model IEnumerable<ClSearcherFrontEnd.Models.SearchTerm>

@{
    ViewBag.Title = "Current Saved Searches";
}

<h2>@ViewBag.Title</h2>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Term)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Term)
        </td>
        <td>
            @Html.ActionLink("Search Results", "Index", "SearchData", routeValues: new { term = item.Term }, htmlAttributes: null) |
            @Html.ActionLink("Delete", "Delete", new { term=item.Term })
        </td>
    </tr>
}

</table>
<p>
    @Html.ActionLink("Add new search term", "Create")
</p>